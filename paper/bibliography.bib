@article{owen_evaporation_2017,
	title = {The evaporation valley in the {Kepler} planets},
	url = {http://arxiv.org/abs/1705.10810},
	abstract = {A new piece of evidence supporting the photoevaporation-driven evolution model for low-mass, close-in exoplanets was recently presented by the California Kepler Survey. The radius distribution of Kepler planets inwards of 100 days is shown to be clearly bimodal, with a valley separating two peaks at 1.3 and 2.6 R\$\_{\textbackslash}oplus\$. Such an "evaporation-valley" had been predicted by numerical models previously. Here, we use a simple analytical model to reproduce the earlier numerical results and to demonstrate that this valley results from the following fact: the timescale for envelope erosion is the longest for those planets with He/He-rich envelopes that, while only a few percent in weight, swell their sizes by a factor of two. The timescale falls for envelopes lighter than this because, as the envelope becomes more tenuous, the planet's radius remains largely constant and so does the photo-evaporating flux it receives. The timescale also drops for heavier envelopes because the planet swells up faster than the addition of envelope mass. Photoevaporation, therefore, herds planets into either bare cores (\${\textbackslash}sim\$1.3 R\$\_{\textbackslash}oplus\$), or those with double the core radius (\${\textbackslash}sim\$2.6 R\$\_{\textbackslash}oplus\$). This fact explains both the observed valley and the steep fall-off of planets above 2.6 R\$\_{\textbackslash}oplus\$. The observed radius distribution further requires that the Kepler planets are clustered around 3 M\$\_{\textbackslash}oplus\$ in mass, are endowed at birth with H/He envelopes more than a few percent in mass, and that their cores are uniformly similar to the Earth in composition. Such envelopes must have been accreted before the dispersal of the gas disks, as opposed to being outgassed, while the core composition indicates planet assembly inward of the ice-line. Lastly, photoevaporation cannot produce bare planets beyond \${\textbackslash}sim50\$ days. If such planets are present, they could indicate a second channel for planet formation.},
	urldate = {2017-09-13},
	journal = {arXiv:1705.10810 [astro-ph]},
	author = {Owen, James E. and Wu, Yanqin},
	month = may,
	year = {2017},
	note = {arXiv: 1705.10810},
	keywords = {Astrophysics - Earth and Planetary Astrophysics},
	file = {arXiv\:1705.10810 PDF:/home/luke/local/Zotero/storage/SJ4KGHG5/Owen and Wu - 2017 - The evaporation valley in the Kepler planets.pdf:application/pdf;arXiv.org Snapshot:/home/luke/local/Zotero/storage/EB75LXI9/1705.html:text/html}
}

@article{duchene_stellar_2013,
	title = {Stellar {Multiplicity}},
	volume = {51},
	url = {http://dx.doi.org/10.1146/annurev-astro-081710-102602},
	doi = {10.1146/annurev-astro-081710-102602},
	abstract = {Stellar multiplicity is a ubiquitous outcome of the star-formation process. The frequency and main characteristics of multiple systems, and their dependence on primary mass and environment, are powerful tools to probe this process. Although early attempts were fraught with selection biases and limited completeness, instrumentation breakthroughs in the past two decades now enable robust statistical analyses. In this review, we summarize current empirical knowledge of stellar multiplicity for main sequence stars and brown dwarfs, as well as among populations of pre-main-sequence stars and embedded protostars. Among field objects, the multiplicity rate and breadth of the orbital period distribution are steep functions of the primary mass, whereas the mass ratio distribution is essentially flat for most populations other than the lowest mass objects. The time-variation of the frequency of visual companions follows two parallel, constant tracks corresponding to loose and dense stellar populations, although current observations do not yet distinguish whether initial multiplicity properties are universal or dependent on the physical conditions of the parent cloud. Nonetheless, these quantitative trends provide a rich comparison basis for numerical and analytical models of star formation.},
	number = {1},
	urldate = {2016-08-07},
	journal = {Annual Review of Astronomy and Astrophysics},
	author = {Duch\^{e}ne, Gaspard and Kraus, Adam},
	year = {2013},
	keywords = {star formation, protostars, main-sequence stars, pre-main-sequence stars},
	pages = {269--310},
	file = {Full Text PDF:/home/luke/local/Zotero/storage/AJX33JG3/Duchêne and Kraus - 2013 - Stellar Multiplicity.pdf:application/pdf}
}

